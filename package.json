{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "db:generate-migration": "drizzle-kit generate:sqlite",
    "db:check": "drizzle-kit check:sqlite --config ./drizzle.config.ts",
    "db:migrate:local:check": "wrangler d1 migrations list DB --local",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:production:check": "wrangler d1 migrations list DB",
    "db:migrate:production": "wrangler d1 migrations apply DB",
    "typecheck": "tsc",
    "wrangler": "wrangler pages dev ./public --local --persist",
    "pages:deploy": "pnpm run build && wrangler pages publish ./public",
    "deploy": "pnpm run db:migrate:production && pnpm run pages:deploy"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@mantine/hooks": "^6.0.13",
    "@remix-run/cloudflare": "^1.16.1",
    "@remix-run/cloudflare-pages": "^1.16.1",
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.1.3",
    "drizzle-orm": "^0.26.3",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-google": "^1.2.0",
    "sonner": "^0.4.0",
    "tailwind-merge": "^1.12.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "better-sqlite3": "8.0.1",
    "drizzle-kit": "^0.18.1",
    "eslint": "^8.38.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "wrangler": "^2.15.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
